{
	"name": "vscode-m5stack-mpy",
	"displayName": "vscode-m5stack-mpy",
	"description": "A extension for M5Stack Micropython system.",
	"publisher": "curdeveryday",
	"repository": {
		"url": "https://github.com/curdeveryday/vscode-m5stack-mpy.git",
		"type": "git"
	},
	"keywords": [
		"m5stack",
		"mpy"
	],
	"version": "1.1.1",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"icon": "resources/logo.png",
	"main": "./dist/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "m5stack",
					"name": "M5Stack Device"
				}
			]
		},
		"menus": {
			"editor/context": [
				{
					"command": "extension.reset.device",
					"when": "resourceScheme == m5stackfs",
					"group": "navigation"
				},
				{
					"command": "m5stack.itemRun",
					"when": "resourceScheme == m5stackfs",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "m5stack.itemRun",
					"when": "resourceExtname == .py",
					"group": "navigation"
				},
				{
					"command": "m5stack.deleteEntry",
					"when": "resourceScheme == m5stackfs",
					"group": "navigation"
				}
			],
			"view/title": [],
			"view/item/context": [
				{
					"command": "m5stack.deleteEntry",
					"when": "view == m5stack && viewItem == file",
					"group": "inline"
				},
				{
					"command": "m5stack.addEntry",
					"when": "view == m5stack && viewItem == folder",
					"group": "inline"
				},
				{
					"command": "m5stack.refreshEntry",
					"when": "view == m5stack && viewItem == COM",
					"group": "inline"
				},
				{
					"command": "m5stack.addEntry",
					"when": "view == m5stack && viewItem == COM",
					"group": "inline"
				},
				{
					"command": "m5stack.itemUpload",
					"when": "view == m5stack && viewItem == folder",
					"group": "inline"
				},
				{
					"command": "m5stack.itemUpload",
					"when": "view == m5stack && viewItem == COM",
					"group": "inline"
				}
			]
		},
		"commands": [
			{
				"command": "extension.reset.device",
				"title": "Reset M5Stack"
			},
			{
				"command": "m5stack.itemRun",
				"title": "Run in M5Stack",
				"icon": {
					"light": "resources/light/run.svg",
					"dark": "resources/dark/run.svg"
				}
			},
			{
				"command": "m5stack.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "m5stack.deleteEntry",
				"title": "Remove",
				"icon": {
					"light": "resources/light/remove.svg",
					"dark": "resources/dark/remove.svg"
				}
			},
			{
				"command": "m5stack.addEntry",
				"title": "create",
				"icon": {
					"light": "resources/light/create.svg",
					"dark": "resources/dark/create.svg"
				}
			},
			{
				"command": "m5stack.itemUpload",
				"title": "upload",
				"icon": {
					"light": "resources/light/upload.svg",
					"dark": "resources/dark/upload.svg"
				}
			}
		]
	},
	"scripts": {
		"compile": "webpack",
		"compile-tests": "tsc -p . --outDir out",
		"lint": "eslint src --ext ts",
		"package": "webpack --mode production --devtool hidden-source-map",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"postinstall": "node serialPortBindingsLoader.js",
		"rebuild": "node rebuild-serialport.js",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "yarn run package",
		"watch": "webpack --watch",
		"watch-tests": "tsc -p . -w --outDir out"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/serialport": "^8.0.2",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.1.0",
		"electron": "13.5.2",
		"electron-rebuild": "^3.2.5",
		"eslint": "^8.1.0",
		"eslint-config-airbnb-typescript": "^16.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-mocha": "^9.0.0",
		"eslint-plugin-prettier": "^4.0.0",
		"mocha": "^9.1.3",
		"node-fetch": "2",
		"prettier": "^2.4.1",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.4",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0"
	},
	"dependencies": {
		"serialport": "beta"
	}
}